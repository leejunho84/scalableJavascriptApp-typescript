{
	"compilerOptions": {
		"target": "es5",  //빌드될 타겟
		"module": "system",
		"moduleResolution": "node",
		"lib":["ES6", "ES7", "dom"], //빌드될때 포함될 스펙
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"experimentalDecorators":true,
		"emitDecoratorMetadata": true,
		"typeRoots": ["./@types"], //사용자정의 타입
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"],
      		"@/*": ["./*"]
		}
	},
	"exclude": [
		"node_modules"
	]
}