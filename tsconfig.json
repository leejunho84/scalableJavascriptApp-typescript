{
	"compilerOptions": {
		"target": "esnext",
		"module": "system",
		"moduleResolution": "node",
		"lib": [
			"esnext",
			"esnext.asynciterable",
			"dom"
		],
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"experimentalDecorators":true,
		"emitDecoratorMetadata": true,
		"typeRoots": ["./node_modules/@types", "./@types"],
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"],
      		"@/*": ["./*"]
		}
	},
	"exclude": [
		"node_modules"
	]
}